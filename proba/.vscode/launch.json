{
  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/sample"
      ],
      "name": "Launch Client",
      "outFiles": ["${workspaceFolder}/out/client/**/*.js"],
      "preLaunchTask": "npm: watch", // watch:client
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "sourceMaps": true,
      "stopOnEntry": false,
      "type": "extensionHost"
    },
    {
      "address": "localhost",
      "name": "Attach to Server",
      "outFiles": ["${workspaceFolder}/out/server/**/*.js"],
      "port": 6011, // 6009
      "protocol": "inspector",
      "request": "attach",
      "restart": true,
      "sourceMaps": true,
      "type": "node"
    },
    {
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/client/test"
      ],
      "name": "Client Tests",
      "outFiles": ["${workspaceFolder}/out/client/test/**/*.js"],
      "preLaunchTask": "npm: watch",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "sourceMaps": true,
      "stopOnEntry": false,
      "type": "extensionHost"
    },
    {
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/client/test",
        "${workspaceFolder}/client/src/test/fixture"
      ],
      "sourceMaps": true,
      "name": "Server Tests",
      "outFiles": ["${workspaceFolder}/out/client/test/**/*.js"],
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "stopOnEntry": false,
      "type": "extensionHost"
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Client", "Attach to Server"]
    }
  ]
}
